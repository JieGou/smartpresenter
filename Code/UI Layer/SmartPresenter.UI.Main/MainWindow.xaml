<Window x:Class="SmartPresenter.UI.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:SmartPresenter.UI.UserControls;assembly=SmartPresenter.UI.UserControls"
        xmlns:AvalonDock="http://schemas.xceed.com/wpf/xaml/avalondock"
        xmlns:Toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Smart Presenter"
        Width="1368"
        Height="780"
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SmartPresenter.UI.Main;component/MainWindowResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Controls:RibbonControl Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" />
        <AvalonDock:DockingManager Grid.Row="1" Margin="0 0 5 0">
            <AvalonDock:LayoutRoot>
                <AvalonDock:LayoutRoot.LeftSide>
                    <AvalonDock:LayoutAnchorSide>
                        <AvalonDock:LayoutAnchorGroup>
                            <AvalonDock:LayoutAnchorable Title="Documents" ContentId="documents" AutoHideMinWidth="300">
                                <Controls:DocumentContainer/>
                            </AvalonDock:LayoutAnchorable>
                        </AvalonDock:LayoutAnchorGroup>
                    </AvalonDock:LayoutAnchorSide>
                </AvalonDock:LayoutRoot.LeftSide>
                <AvalonDock:LayoutRoot.BottomSide>
                    <AvalonDock:LayoutAnchorSide>
                        <AvalonDock:LayoutAnchorGroup>
                            <AvalonDock:LayoutAnchorable Title="Media Gallery" ContentId="mediaGallery" AutoHideMinHeight="275">
                                <Controls:MediaViewer Margin="2 8 2 2" />
                            </AvalonDock:LayoutAnchorable>
                        </AvalonDock:LayoutAnchorGroup>
                    </AvalonDock:LayoutAnchorSide>
                </AvalonDock:LayoutRoot.BottomSide>
                <AvalonDock:LayoutPanel>
                    <AvalonDock:LayoutAnchorablePane>
                        <AvalonDock:LayoutAnchorable Title="Slide Viewer" CanHide="False" CanClose="False" CanAutoHide="False">
                            <Controls:SlideViewer />
                        </AvalonDock:LayoutAnchorable>
                    </AvalonDock:LayoutAnchorablePane>
                </AvalonDock:LayoutPanel>
            </AvalonDock:LayoutRoot>
        </AvalonDock:DockingManager>
    </Grid>

